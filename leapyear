#include <stdio.h>
int main() 
{
    int year;
    printf("enter the year you want to check\n");
    scanf("%d\n",&year);
    if(year%400==0)
    {
        printf("leap year %d \n",year);
    }
    else if(year%4==0)
    {
        printf("leap year %d \n",year);
    }
    else
    {
        printf("entered year is not a leap year which is %d \n",year);
    }
    return 0;
}
